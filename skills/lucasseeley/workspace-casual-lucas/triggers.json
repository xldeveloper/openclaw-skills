[
  {
    "pattern": "(?i).*list files.*workspace.*",
    "description": "List files in the OpenClaw workspace",
    "run": "list_workspace",
    "arguments": {
      "path": "C:\\Users\\lucas\\OpenClawWorkspace"
    },
    "channels": ["whatsapp"]
  },
  {
    "pattern": "(?i).*run command (.*)",
    "description": "Run any command in the workspace",
    "run": "run_command",
    "arguments": {
      "command": "$1"
    },
    "channels": ["whatsapp"]
  },
  {
    "pattern": "(?i).*open file (.*)",
    "description": "Open a specific file in the workspace",
    "run": "open_file",
    "arguments": {
      "file": "$1"
    },
    "channels": ["whatsapp"]
  }
]
