{
  "name": "clawhub",
  "slug": "youtube-downloader-clipper",
  "displayName": "ClawHub - YouTube Video Clipper & Downloader",
  "version": "1.0.0",
  "description": "Clip specific sections from YouTube videos with precise timestamps. Pure Python solution with auto-installation. Extract audio, select quality, or download full videos.",
  "author": "Claude",
  "license": "MIT",
  "tags": [
    "youtube",
    "video",
    "download",
    "clip",
    "media",
    "audio",
    "yt-dlp"
  ],
  "categories": [
    "media",
    "utilities"
  ],
  "usage": "/clawhub <youtube-url> [options]",
  "examples": [
    "/clawhub https://youtube.com/watch?v=xxx --clip 00:30-02:15",
    "/clawhub https://youtube.com/watch?v=xxx --clip 01:00-03:30 --quality 1080p",
    "/clawhub https://youtube.com/watch?v=xxx --clip 00:10-01:00 --audio-only",
    "/clawhub https://youtube.com/watch?v=xxx"
  ],
  "options": [
    {
      "flag": "--clip <start>-<end>",
      "description": "Clip video from start to end time (format: MM:SS or HH:MM:SS)"
    },
    {
      "flag": "--quality <resolution>",
      "description": "Specify quality (e.g., 720p, 1080p, best)"
    },
    {
      "flag": "--audio-only",
      "description": "Download only the audio track as MP3"
    },
    {
      "flag": "--output <filename>",
      "description": "Custom output filename"
    },
    {
      "flag": "--format <format>",
      "description": "Output format (mp4, mkv, webm, mp3, etc.)"
    }
  ]
}
